@model IEnumerable<Registration.Models.Trip>

@{
    ViewBag.Title = "Trips";
}

<h2>Your Trips</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Route.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.num_seats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reserved)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Route.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.num_seats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reserved)
            </td>
            <td>
                @Convert.ToDateTime(item.DateTime).ToString("yyyy/MM/dd HH:mm")
            </td>
            <td>
                @Html.ActionLink("Details", "DriverTripDetails", new { id = item.TripID })
            </td>
        </tr>
    }

</table>
